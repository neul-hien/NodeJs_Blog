<div class="mt-4">
    <h3>Đăng khóa học</h3>
    <form method="post" action="/course/{{courses._id}}?_method=PUT">
        <div class="mb-3">
            <label for="name" class="form-label">Tên khóa học</label>
            <input class="form-control" value="{{courses.name}}" id="name" name="name">
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Mô tả</label>
            <textarea class="form-control" id="description" name="description">{{courses.description}}</textarea>
        </div>
        <div class="mb-3">
            <label for="videoId" class="form-label">Video Id</label>
            <input class="form-control" value="{{courses.videoId}}" id="videoId" name="videoId">
        </div>

        <button type="submit" class="btn btn-primary">Thêm khóa học</button>
    </form>
</div>
