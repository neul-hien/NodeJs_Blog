<div class="">
    <div class="row">
        {{#each courses}}
            <div class="col-md-6 col-lg-4">
                
                <div  class="card card-course mt-4">
                    <a href="/course/{{this.slug}}">
                        <img src="{{this.img}}" class="card-img-top" alt="{{this.name}}">
                    </a>
                    
                    <div class="card-body">
                        <a href="/course/{{this.slug}}">
                            <h5 class="card-title">{{this.name}}</h5>
                        </a>
                        
                        <p style="height: 200px;" class="card-text">{{this.description}}</p>
                        <a href="/course/{{this.slug}}" class="btn btn-primary">Mua khóa học</a>
                    </div>
                </div>
                
            </div>
        {{/each}}
    </div>
</div>